{{ header }}
<div class="title">
    <section>
        <h1>{{ heading_title }}</h1>
        <div class="bread-crumbs">
            <ul>
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
            </ul>
        </div>
    </section>
</div>
<div id="product-category" class="container">
  <section>
      <div class="service_card row_flex">
        {{ column_left }}
        <div class="right_col">
          {{ filter_sp }}
          {% if category_top %}
            <div class="high_ratings">
              {% if products %}
              <ul id="more-product-list">
                {% for product in products %}
                <li>
                <a href="{{ product.href }}">
                  <div class="img"><img src="{{ product.image }}" alt="{{ product.name }}"></div>
                  <div class="text_wrap">
                    <div class="col">
                      <div>
                        <h3>{{ product.name }}</h3>
                        <div class="row_flex">
                          <p>{{ product.review }} отзывов</p>
                          <div>
                            <span>{{ product.rating }}</span>
                            <ul>
                              {% for i in 0..product.ceil if i < product.ceil %}
                              <li><a href="#"></a></li>
                              {% endfor %}
                            </ul>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  </a>
                </li>
                {% endfor %}
              </ul>
              {% if pagination %}
              {{ pagination }}
                {% if 0 %}
                <a id="more-product" href="{{ pagination }}">Показать еще</a>
                {% endif %}
              {% endif %}
              {% endif %}
              {% if not categories and not products %}
              <p>{{ text_empty }}</p>
              <div class="buttons">
                <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
              </div>
              {% endif %}
            </div>
          {% else %}
            <div class="brochure_wrapp">
              <div class="brochure">
                  <h2 style="background: url('{{ thumb }}') no-repeat;">{{ heading_title }}</h2>
                  {% if description %}
                  {{ description }}
                  {% endif %}
              </div>
              {{ content_top }}
            </div>
          {% endif %}
        </div>
      </div>
      {% if category_top %}
      {{ content_top }}
      {% else %}
      <div class="high_ratings high_ratings_card">
        <h2>Типографии</h2>
        {% if products %}
        <ul id="more-product-list">
          {% for product in products %}
          <li>
          <a href="{{ product.href }}">
            <div class="img"><img src="{{ product.image }}" alt="{{ product.name }}"></div>
            <div class="text_wrap">
              <div class="col">
                <div>
                  <h3>{{ product.name }}</h3>
                  <div class="row_flex">
                    <p>{{ product.review }} отзывов</p>
                    <div>
                      <span>{{ product.rating }}</span>
                      <ul>
                        {% for i in 0..product.ceil if i < product.ceil %}
                        <li><a href="#"></a></li>
                        {% endfor %}
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            </a>
          </li>
          {% endfor %}
        </ul>
        {% if pagination %}
        {{ pagination }}
          {% if 0 %}
          <a id="more-product" href="{{ pagination }}">Показать еще</a>
          {% endif %}
        {% endif %}
        {% endif %}
        {% if not categories and not products %}
        <p>{{ text_empty }}</p>
        <div class="buttons">
          <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
        </div>
        {% endif %}
      </div>
      {% endif %}
  </section>
</div>
{{ content_bottom }}
{{ footer }}
