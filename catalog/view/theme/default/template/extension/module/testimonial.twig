{% if layout==1 %}
<div class="reviews">
    {% if heading_title %}
    <h2>{{ heading_title }}</h2>
    {% endif %}
    <div class="slider_reviews owl-carousel">
        {% for review in reviews %}
        <div class="item">
            <div class="col">
                <div>
                    <h3>{{ review['author'] }}</h3>
                    <span>{{ review['date_added'] }}</span>
                </div>
                <p>{{ review['text'] }}</p>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% elseif layout==2 %}
<div class="reviews_block row_flex">
    <div class="reviews_item">
        <div class="wrapp">
            <div>
                {% if heading_title %}
                <h3>{{ heading_title }}</h3>
                {% endif %}
                {% if button_all %}
                <a href="{{ keyword }}">{{ button_all_text }}</a>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="reviews_slider_wrap">
        <div class="reviews_slider owl-carousel">
            {% for review in reviews %}
            <div class="item">
                <div>
                    <h3>{{ review['author'] }}</h3>
                    <span>{{ review['date_added'] }}</span>
                </div>
                <p>{{ review['text'] }}</p>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% else %}
<div class="reviews_item">
    <div class="wrapp">
        <div>
            {% if heading_title %}
            <h3>{{ heading_title }}</h3>
            {% endif %}
            {% if button_all %}
            <a href="{{ keyword }}">{{ button_all_text }}</a>
            {% endif %}
        </div>
    </div>
</div>
{% endif %}