{{ header }}
<div class="title">
  <section>
    <h1>{{ heading_title }}</h1>
      <div class="bread-crumbs">
        <ul>
          {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
          {% endfor %}
        </ul>
      </div>
    </section>
</div>
<div class="container_page">
  <section>
    <div id="articles" class="articles">
    {% if articles %}
      <ul>
      {% for article in articles %}
        <li>
          <div class="img"><a href="{{ article['href'] }}"><img src="{{ article['thumb'] }}" alt="{{ article['name'] }}"></a></div>
          <div class="text">
            <h3>{{ article['name'] }}</h3>
            <p>{{ article['preview'] }}</p>
            <a href="{{ article['href'] }}">Подробнее</a>
          </div>
        </li>
      {% endfor  %}
      </ul>
      {% if pagination %}
      <a id="more-articles" href="{{ pagination }}">Показать еще</a>
      {% endif %}
    {% endif  %}
    {% if not categories and not articles %}
    <p>{{ text_empty }}</p>
    <div class="buttons">
      <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
    </div>
    {% endif %}
    </div>
  </section>
</div>
<section>
{{ content_bottom }}
</section>
{{ footer }}